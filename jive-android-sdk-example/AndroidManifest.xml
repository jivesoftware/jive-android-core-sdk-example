<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jivesoftware.example"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".github.authentication.GitHubAuthenticationActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".jive.authentication.JiveAuthenticationActivity"/>
        <activity android:name=".repositories.RepositoriesActivity"/>
        <activity android:name=".teams.TeamsActivity"/>
        <activity android:name=".collaborators.CollaboratorActivity"/>
        <activity android:name=".team.TeamCollaboratorsActivity"/>
        <activity android:name=".followers.FollowersActivity"/>
    </application>
</manifest>